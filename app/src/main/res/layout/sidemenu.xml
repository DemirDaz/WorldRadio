<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E87A47">

    <TextView
        android:id="@+id/pesma2"
        android:layout_width="183dp"
        android:layout_height="47dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="58dp"
        android:text="Pesma"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pevac2"
        android:layout_width="138dp"
        android:layout_height="22dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="10dp"
        android:text="Pevac"
        android:textColor="#DFDFDF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/pesma2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="192dp"
        android:text="Demir \nDazdarević"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/ic_panorama_fish_eye_black_24dp"
        android:foreground="@drawable/ic_chevron_left_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="414dp"
        android:layout_height="208dp"
        android:layout_marginTop="12dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="414dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="40dp"
                    app:srcCompat="@drawable/ic_home_black_24dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:text="Početna"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="420dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="-99dp"
                tools:layout_editor_absoluteY="522dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="40dp"
                    app:srcCompat="@drawable/ic_dashboard_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sve radio stanice"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="414dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="40dp"
                    app:srcCompat="@drawable/ic_favorite_border_black_24dp" />

                <TextView
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:text="Moje omiljene"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>